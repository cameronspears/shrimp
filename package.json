{
  "name": "@shrimphealth/cli",
  "version": "1.0.0",
  "description": "AI-powered code health monitoring with automated fixes",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "shrimp": "./bin/shrimp.js"
  },
  "scripts": {
    "build": "bun run build:tsc",
    "build:tsc": "tsc",
    "dev": "tsc --watch",
    "test": "bun test --coverage",
    "test:watch": "bun test --watch",
    "test:unit": "bun test tests/unit --coverage",
    "test:integration": "bun test tests/integration --coverage",
    "test:e2e": "bun test tests/e2e",
    "test:coverage": "bun test --coverage --coverage-reporter=lcov --coverage-reporter=text",
    "test:report": "bun run scripts/generate-test-report.ts",
    "test:track": "bun run scripts/track-quality-trend.ts",
    "lint": "tsc --noEmit",
    "prepublishOnly": "bun run build && bun run test"
  },
  "keywords": [
    "code-health",
    "code-quality",
    "linting",
    "static-analysis",
    "ai",
    "claude",
    "automated-fixes",
    "developer-tools"
  ],
  "author": "Cam <contact@gielinorgains.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/cameronspears/shrimp.git"
  },
  "files": [
    "dist",
    "bin",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "bun": ">=1.0.0"
  },
  "dependencies": {
    "boxen": "^7.1.1",
    "chalk": "^5.3.0",
    "chokidar": "^4.0.3",
    "commander": "^12.0.0",
    "conf": "^12.0.0",
    "ora": "^8.0.1",
    "@typescript-eslint/parser": "^7.0.0",
    "@typescript-eslint/typescript-estree": "^7.0.0",
    "pino": "^10.0.0",
    "pino-pretty": "^10.3.1"
  },
  "devDependencies": {
    "@types/bun": "^1.0.0",
    "@types/chokidar": "^2.1.7",
    "@types/node": "^20.11.0",
    "typescript": "^5.3.3",
    "mock-fs": "^5.2.0",
    "@types/mock-fs": "^4.13.4"
  },
  "peerDependencies": {
    "@anthropic-ai/sdk": "^0.20.0"
  },
  "peerDependenciesMeta": {
    "@anthropic-ai/sdk": {
      "optional": true
    }
  }
}
